.progress-bar__value
    background #28bf14
    background linear-gradient(to bottom, #abff58 0%, #28bf14 51%, #8bda1a 86%, #28bf14 100%)
    border-radius 5px
    bottom 0
    left 0
    position absolute
    right 0
    top 0
    transition width 1s ease-in-out
    width 20%

    \/.progress-bar:hover &
        width 100%